@model IEnumerable<Buru.Models.Bug>

@{
    ViewBag.Title = "List Bug";
}


<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    List Bug <small>a bug list from your project</small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "Project")">List Project</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "Bug")">List Bug</a>
            <i class="fa fa-angle-right"></i>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->

        <!-- BEGIN PAGE CONTENT-->
        <div class="page-content-wrapper">
            <div>
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet box grey-cascade">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-globe"></i>List Bug
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse">
                            </a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-toolbar">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="btn-group">
                                        <a href="@Url.Action("Create", "Bug")" class="btn green" id="sample_editable_1_new">Add New</a>
                                        <!--<a href="@Url.Action("Create","Bug")">
                                            <button id="sample_editable_1_new" class="btn green">
                                                Add New <i class="fa fa-plus"></i>
                                            </button>
                                        </a>-->
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="btn-group pull-right">
                                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                                            Tools <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu pull-right">
                                            <li>
                                                <a href="javascript:;">
                                                    Print
                                                </a>
                                            </li>
                                            <li>
                                                <a href="javascript:;">
                                                    Save as PDF
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-bordered table-hover" id="sample_1">
                            <thead>
                                <tr>
                                    <th class="table-checkbox">
                                        <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Attachment
                                    </th>
                                    <th>
                                        Kind
                                    </th>
                                    <th>
                                        Severity
                                    </th>
                                    <th>
                                        Start Date
                                    </th>
                                    <th>
                                        Due Date
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
@foreach (var item in Model) {
                                <tr class="odd gradeX">
                                    <td>
                                        <input type="checkbox" class="checkboxes" value="1" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Attachment)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Kind)
                                    </td>
                                    <td>
                                        @if (item.Severity == "Critical")
                                        {
                                            <span class="label label-sm label-danger">
                                                @Html.DisplayFor(modelItem => item.Severity)
                                            </span>
                                        }
                                        else if (item.Severity == "High")
                                        {
                                            <span class="label label-sm label-warning">
                                                @Html.DisplayFor(modelItem => item.Severity)
                                            </span>
                                        }
                                        else if (item.Severity == "Medium")
                                        {
                                            <span class="label label-sm label-primary">
                                                @Html.DisplayFor(modelItem => item.Severity)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="label label-sm label-info">
                                                @Html.DisplayFor(modelItem => item.Severity)
                                            </span>
                                        }

                                    </td>
                                    <td class="center">
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td class="center">
                                        @Html.DisplayFor(modelItem => item.ClosedDate)
                                    </td>
                                    <td>
                                        <span class="label label-sm label-success">
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </span>
                                    </td>
                                    <td>
                                        <!--<a href="@Url.Action("Edit","Bug")" class="btn btn-xs blue">
                                            Edit
                                        </a>-->
                                        @Html.ActionLink("Edit", "Edit", new { id=item.BugId
                                        }) |
                                        @Html.ActionLink("Details", "Details", new { id=item.BugId
                                        }) |
                                        @Html.ActionLink("Delete", "Delete", new { id=item.BugId })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>

        <!-- END PAGE CONTENT-->
  

